
# FinSight Environment Configuration

# Application Settings
VITE_APP_NAME=FinSight
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Personal Finance Tracker"

# API Configuration (for future backend integration)
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000

# Database Configuration (for future PostgreSQL integration)
DATABASE_URL=postgresql://username:password@localhost:5432/finsight
DIRECT_URL=postgresql://username:password@localhost:5432/finsight

# Redis Configuration (for future caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Authentication (for future implementation)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Email Configuration (for future notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# External APIs (for future integrations)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_EXPORT=true
VITE_ENABLE_IMPORT=true
VITE_ENABLE_NOTIFICATIONS=false

# Development Settings
NODE_ENV=development
VITE_DEBUG=true
VITE_MOCK_DATA=true
